<Page x:Class="Project.AddEditAuto"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Project"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddEditAuto"
      Background="Bisque">

    <Grid Background="Beige">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="183*"/>
            <ColumnDefinition Width="617*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="42*"/>
            <RowDefinition Height="54*"/>
            <RowDefinition Height="45*"/>
            <RowDefinition Height="33*"/>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="60*"/>
        </Grid.RowDefinitions>

        <TextBlock>Model</TextBlock>
        <TextBlock Grid.Row="1">Color</TextBlock>
        <TextBlock Grid.Row="2">Year</TextBlock>
        <TextBlock Grid.Row="3">STNumber</TextBlock>
        <TextBlock Grid.Row="4" Margin="0,0,0,45">DayPrice</TextBlock>




        <TextBox Text="{Binding Model}" Grid.Column="1" Grid.Row="0" Background="BlanchedAlmond" Width="500px" HorizontalAlignment="Left"></TextBox>
        <TextBox Text="{Binding Color}" Grid.Column="1" Grid.Row="1" Background="BlanchedAlmond" Width="500px" HorizontalAlignment="Left"></TextBox>
        <TextBox Text="{Binding Year}" Grid.Column="1" Grid.Row="2" Background="BlanchedAlmond" Width="500px" HorizontalAlignment="Left"></TextBox>
        <TextBox Text="{Binding StNumber}" Grid.Column="1" Grid.Row="3" Background="BlanchedAlmond" Width="500px" HorizontalAlignment="Left"></TextBox>
        <TextBox Text="{Binding Dayprice}" Grid.Column="1" Grid.Row="4" Background="BlanchedAlmond" Width="500px" HorizontalAlignment="Left" Margin="0,0,0,45"></TextBox>



        <Button Content="Сохранить" Grid.ColumnSpan="2" Grid.Row="5" Margin="0,5,0,0" Name="BtnSave" Click="BtnSave_Click" Background="BlanchedAlmond"></Button>
    </Grid>
</Page>
